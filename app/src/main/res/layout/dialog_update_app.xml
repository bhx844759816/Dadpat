<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_update_app_bj"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:background="@drawable/remind_network_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.benbaba.dadpat.host.view.StrokeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="检测到新版本"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toTopOf="@+id/id_update_app_bj"
        app:stroke_color="@color/text_music_stroke_color" />

    <TextView
        android:id="@+id/id_update_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="有新版V2.2.1可以下载"
        android:textColor="@color/sex_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/id_update_app_bj"
        app:layout_constraintLeft_toLeftOf="@id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@id/id_update_app_bj"
        app:layout_constraintTop_toTopOf="@id/id_update_app_bj" />

    <TextView
        android:id="@+id/id_update_apk_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="需要下载得大小:20M"
        android:textColor="@color/sex_color"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@id/id_update_app_bj"
        app:layout_constraintTop_toBottomOf="@id/id_update_version" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toLeftOf="@+id/id_update_app_bj"
        app:layout_constraintRight_toRightOf="@+id/id_update_app_bj"
        app:layout_constraintTop_toBottomOf="@+id/id_update_app_bj">

        <ImageView
            android:id="@+id/id_update_app_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/set_cancel_button" />

        <ImageView
            android:id="@+id/id_update_app_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/set_energe_button" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
