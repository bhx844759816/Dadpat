<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_music_buffer_bj"
        android:layout_width="397dp"
        android:layout_height="277dp"
        android:background="@drawable/per_bj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.benbaba.dadpat.host.view.StrokeTextView
        android:id="@+id/id_music_buffer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/music_buffer"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="@+id/id_music_buffer_bj"
        app:layout_constraintRight_toRightOf="@id/id_music_buffer_bj"
        app:layout_constraintTop_toTopOf="@+id/id_music_buffer_bj"
        app:stroke_color="@color/text_music_stroke_color" />

    <ImageView
        android:id="@+id/id_buffer_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/storage_delete"
        app:layout_constraintRight_toRightOf="@+id/id_buffer_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/id_music_buffer_bj"

        />

    <TextView
        android:id="@+id/id_buffer_selectAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:text="@string/select_all"
        android:textColor="@color/sex_color"
        android:textSize="13sp"
        app:layout_constraintRight_toLeftOf="@+id/id_buffer_delete"
        app:layout_constraintTop_toTopOf="@+id/id_buffer_delete" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_buffer_recyclerView"
        android:layout_width="370dp"
        android:layout_height="218dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/per_bottom_bj"
        app:layout_constraintLeft_toLeftOf="@+id/id_music_buffer_bj"
        app:layout_constraintRight_toRightOf="@id/id_music_buffer_bj"
        app:layout_constraintTop_toBottomOf="@+id/id_music_buffer_title" />

    <ImageView
        android:id="@+id/id_music_buffer_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/storage_button"
        app:layout_constraintLeft_toLeftOf="@+id/id_music_buffer_bj"
        app:layout_constraintRight_toRightOf="@+id/id_music_buffer_bj"
        app:layout_constraintTop_toBottomOf="@+id/id_music_buffer_bj" />
</android.support.constraint.ConstraintLayout>
