<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/id_device_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/toy_drum" />

        <TextView
            android:id="@+id/id_device_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/id_device_type"
            android:layout_alignTop="@id/id_device_type"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_device_type"
            android:gravity="center_vertical"
            android:text="玩具鼓"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018/10/10"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/half_black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/modify"
                android:text="名称:       dadpat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/id_device_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="唯一ID:   11111111111111111111"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_device_onLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_rect"
            android:padding="15dp"
            android:text="在线" />

    </RelativeLayout>

</LinearLayout>
